{
    "name": "gw2-aggregator",
    "version": "0.0.1",
    "description": "monorepo for gw2 log aggregator",
    "license": "GNU",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start:dev": "yarn workspace frontend dev & yarn workspace lambda dev",
        "start": "docker-compose up",
        "lint-staged": "lint-staged",
        "lint": "eslint",
        "docker:build": "yarn workspaces foreach run docker:build",
        "prepare": "husky install"
    },
    "lint-staged": {
        "ignore": [
            "node_modules",
            "**/node_modules",
            "dist",
            "package-lock.json"
        ],
        "src/**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
        "src/**/*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write --ignore-unknown"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "husky": "^8.0.3",
        "jest": "^28.1.3",
        "lint-staged": "^13.1.1",
        "ts-jest": "^28.0.8",
        "typescript": "^4.7.4"
    }
}
